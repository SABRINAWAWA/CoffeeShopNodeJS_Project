    <section class="ftco-section testimony-section" style="background-image: url(images/bg_5.jpg);" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row justify-content-center mb-5 pb-2">
          <div class="col-md-7 text-center heading-section heading-section-white ftco-animate">
          	<span class="subheading">{{page.team.header}}</span>
            <h2 class="mb-4">{{page.team.subtitle}}</h2>
          </div>
        </div>
        <div class="row ftco-animate justify-content-center">
          <div class="col-md-7">
            <div class="carousel-testimony owl-carousel ftco-owl">
              {{#page.team.people}}
              <div class="item">
                <div class="testimony-wrap text-center py-4 pb-5">
                  <div class="user-img mb-4" style="background-image: url({{image}})">
                    <span class="quote d-flex align-items-center justify-content-center">
                      <i class="icon-quote-left"></i>
                    </span>
                  </div>
                  <div class="text p-3">
                    <p class="mb-4">{{quotation}}</p>
                    <p class="name">{{name}}</p>
                    <span class="position">{{title}}</span>
                  </div>
                </div>
              </div>
                {{/page.team.people}}
            </div>
          </div>
        </div>
      </div>
    </section>
			

		<section class="ftco-section ftco-no-pt ftco-no-pb">
			<div class="container">
				<div class="row d-flex">
          <div class="col-md-5 ftco-animate img img-2" style="background-image: url(images/bg_6.jpg);"></div>
          <div class="col-md-7 ftco-animate makereservation p-4 p-md-5">
          	<div class="heading-section ftco-animate mb-5">
	          	<span class="subheading">Buy one coffee, Enjoy the day</span>
	            <h2 class="mb-4">Place Your Order</h2>
	          </div>
            
            <form action="/order" method="post">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" name="name" id="order-name" class="form-control" placeholder="Your Name">
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Phone</label>
                    <input type="text" name="phone" id="order-phone" class="form-control" placeholder="Your Phone">
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label for="">Email</label>
                    <input type="text" name="email" id="order-email" class="form-control" placeholder="Your Email">
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label for="">Size</label>
                    <div class="select-wrap one-third">
                     <select name="size" id="order-size" class="form-control">
                        <option value="">Size</option>
                        <option value="Extra Large">Extra Large</option>
                        <option value="Large">Large</option>
                        <option value="Middle">Middle</option>
                        <option value="Small">Small</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label for="">Order</label>
                    <textarea class="form-control" name="order" id="order-description" placeholder="Describe your order here..." id="order" rows="8"></textarea>
                  </div>
                </div>

                <div class="col-md-12 mt-3">
                  <div class="form-group" id="btn-order-container">
                    <input id="btn-order" type="submit" value="Place an Order" class="btn btn-primary py-3 px-5">
                  </div>
                </div>

              </div>
            </form>
          </div>
        </div>
			</div>
		</section>

   {{>footer}}
  

  <!-- loader -->
  <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>


  {{>script}}
    <script>
        (function(){
            console.log('Hello!')
            $('#btn-order').click(function(event){
                if(event)
                    event.preventDefault()
                
                var order={
                    name:$('#order-name').val(),
                    email:$('#order-email').val(),
                    phone:$('#order-phone').val(),
                    size:$('#order-size').val(),
                    order:$('#order-description').val()
                }

                console.log('ORDER PLACED: '+JSON.stringify(order))
                
                $.ajax({
                    url:'/order',
                    method:'post', 
                    data:order,
                    success:function(resp){
                        console.log('ORDER RECEIVED: '+JSON.stringify(resp));
                        $('#btn-order-container').html('<h3>Thanks! We will send you text message when your order is ready!</h3>');
                    },
                    error:function(resp){

                    }
                })
            })
        })()
    </script>
  </body>
</html>
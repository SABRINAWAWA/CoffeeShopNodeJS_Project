	            		<div class="img" style="background-image: url({{image}});"></div>
	            		<h4>{{{caption}}}</h4>
	            	</a>
                    {{/page.about.images}}
                    
	            </div>
						</div>
					</div>
				</div>
			</div>
	</section>

